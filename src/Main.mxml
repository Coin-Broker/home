<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   xmlns:views="views.*"
			   height="600" width="800" >
	
	<fx:Declarations>
		
	</fx:Declarations>
	
	
	<fx:Script>
		<![CDATA[
			import model.ModelLocator;
			
		]]>
	</fx:Script>
	
	
	<s:VGroup width="100%" height="100%">
		<views:BannerMenu/>
		<s:TabBar dataProvider="{views}"/>
		<mx:ViewStack id="views" height="100%" width="100%" >
			<views:MainView label="Main View" 
							coins="{ModelLocator.getInstance().coins}"
							clients="{ModelLocator.getInstance().clients}"/>
			<views:ClientCoinListsView label="Client Stock Lists"/>
			<views:AccountManagementView label="Account Management"/>
			<views:ManagementView label="Management"/>
		</mx:ViewStack>
	</s:VGroup>
	
	
	
</s:Application>
